{
  "name": "onechain-mcp",
  "version": "1.0.0",
  "description": "MCP server for OneChain blockchain interactions",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "onechain-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:railway": "tsc && cp dist/index-railway.js dist/index.js",
    "start": "node dist/index.js",
    "start:railway": "node dist/index-railway.js",
    "dev": "tsx src/index.ts",
    "dev:railway": "tsx src/index-railway.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@onelabs/sui": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.0"
  }
}
